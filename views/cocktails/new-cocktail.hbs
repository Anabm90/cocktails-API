<h1>Creating a new recipe</h1>

<form action="/cocktails/profile/new-cocktail" method="post" enctype="multipart/form-data">
  <label for="strDrink">Name</label>
  <input name="strDrink" type="text" class="form-control" id="name-input" placeholder="Write a name" required>


  <label for="strCategory">Category</label>
  <select name="strCategory" class="form-control">
    <option>Select</option>
    {{#each values}}
    {{#each category}}
    <option value="{{[]}}">{{[]}}</option>
    {{/each}}
    {{/each}}
  </select>


  <label for="strAlcoholic">Alcohol</label>
  <select name="strAlcoholic" class="form-control">
    <option>Select</option>
    {{#each values}}
    {{#each alcohol}}
    <option value="{{[]}}">{{[]}}</option>
    {{/each}}
    {{/each}}

  </select>


  <label for="strGlass">Glass</label>
  <select name="strGlass" class="form-control">
    <option>Select</option>
    {{#each values}}
    {{#each glass}}
    <option value="{{[]}}">{{[]}}</option>
    {{/each}}
    {{/each}}

  </select>


  <input type="text" name="imageName" placeholder="nombre de la imagen" required><br><br>
  <input type="file" name="imageInput"><br><br>


  <label for="strInstructions">Instructions</label>
  <input name="strInstructions" type="text" class="form-control" id="name-input" required>

  <label for="strIngredients">Ingredients</label>
  <input name="strIngredients" type="text" class="form-control" id="name-input" required>
  <p>IngredientÂ´s structure example: 1 piece , orange juice </p>


  <label for="strTags">Tags</label>
  <input name="strTags" type="text" class="form-control" id="name-input" required>

  <button type="submit" class="btn btn-dark">Create</button>
</form>