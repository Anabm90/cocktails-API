
<div class="container">
  <h1 class="text-center">COCKTAILS</h1>
  <hr> 

    <a class= "d-flex justify-content-center btn btn-dark" href="/cocktails/advanced-search">Advanced search</a>


        <div class="cocktail-list-container">

          <br><br>

            <div class="cocktail-db">


              <div class="row">
                   {{#each allcocktails}}
                        <div class="col-sm-6 col-md-4 col-lg-4">
                        
                          <img class="image-search mx-auto d-block" src="{{strDrinkThumb}}" alt="{{strDrink}}">
                          <h3 class="text-center">{{strDrink}}</h3>
                          <p class="text-center">{{strCategory}}</p>
                          <a class="d-flex justify-content-center btn btn-light"href="/cocktails/{{id}}">see more...</a>
                        </div>
                    {{/each}}

              </div>
              <div class="row">
                   {{#each filterCocktails}}
                        <div class="col-sm-6 col-md-4 col-lg-4">
                        
                          <h3 class="text-center">{{strDrink}}</h3>
                          <p class="text-center">{{strCategory}}</p>
                          <a class="d-flex justify-content-center btn btn-light"href="/cocktails/{{id}}">see more...</a>
                        </div>
                    {{/each}}
            </div>

        </div>
       
  
</div>    
