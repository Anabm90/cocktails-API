            <div class="card" style="width: 17rem;">

              <img class="card-img-top" src="{{strDrinkThumb}}" alt="{{strDrink}}">
              <div class="card-body">
                <h3 class="card-title text-center">{{strDrink}}</h3>
                <p class="card-text text-center">{{strCategory}}</p>
                <a href="/cocktails/{{id}}" class="d-flex justify-content-center btn btn-dark">See more...</a>
              </div>
            </div>
