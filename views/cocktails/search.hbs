  <div style="background-color: white" class="container">
    <h1 class="text-center search-view">COCKTAILS</h1>
    <hr>

    <a class="d-flex justify-content-center btn btn-dark" href="/cocktails/advanced-search">Advanced search</a>


    <div class="cocktail-list-container">

      <br><br>

      <div class="cocktail-db">


        <div class="row">
          {{#each allcocktails}}
